<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href=" https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>Document</title>

</head>

<body>
    <h1>CarBank</h1>
    <form action="/logout?_method=DELETE" method="POST">
        <div>
            <input type="submit" value="Logout">
        </div>
    </form>
    <h3>Welcome</h3>
    <main>
        <form action="" method="GET">
            <label for="car-select">filter by manufacturer:</label>

            <select name="manufacturer" id="">
                <option value="">choose a manufacturer</option>
                <option value="Ford">Ford</option>
                <option value="Chevrolet">Chevrolet</option>
                <option value="Dodge">Dodge</option>
                <option value="Lamborghini">Lamborghini</option>
                <option value="Audi">Audi</option>
                <option value="BMW">BMW</option>
                <option value="Porsche">Porsche</option>
                <option value="Jaguar">Jaguar</option>
                <option value="Acura">Acura</option>
                <option value="Nissan">Nissan</option>
                <option value="Toyota">Toyota</option>
            </select>
            <input type="submit" value="filter" />
        </form>
        <form action="" method="GET">
            <label for="car-select">filter by country:</label>

            <select name="country" id="">
                <option value="">choose by country</option>
                <option value="USA">USA</option>
                <option value="Italy">Italy</option>
                <option value="UK">UK</option>
                <option value="Germany">Germany</option>
                <option value="Japan">Japan</option>
            </select>
            <input type="submit" value="filter" />
        </form>
        <form action="" method="GET">
            <label for="car-select">filter by Decade:</label>

            <select name="year" id="">
                <option value="">choose a decade:</option>
                <option value="195">1950s</option>
                <option value="196">1960s</option>
                <option value="197">1970s</option>
                <option value="198">1980s</option>
                <option value="199">1990s</option>
                <option value="200">2000s</option>
                <option value="201">2010s</option>
                <option value="202">2020s</option>
            </select>
            <input type="submit" value="filter" />
        </form>
        <ul>
            <% cars.forEach(car=> { %>
                <li>
                    <a href="/site/<%=car._id%>">
                        <%= car.manufacturer %>
                            <%= car.model %>
                                <%= car.country %>
                    </a>
                </li>
                <% })%>
        </ul>
    </main>
</body>
</body>

</html>