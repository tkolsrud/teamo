<%- include ("../partials/headerpartial.ejs"); %>

    <body>

        <%- include ("../partials/navbarPartial.ejs"); %>

            <h1>Show page</h1>
            <main>

                <section class="car-show-card">
                    <img class="car-show-img" src="<%=car.img %>" alt="">
                    <div>
                        <ul class="car-show-info">

                            <li><u>Model</u>: <%= car.model %>
                            </li>
                            <li><u>Manufacturer</u>: <%= car.manufacturer %>
                            </li>
                            <li><u>Country of Origin</u>: <%= car.country %>
                            </li>
                            <li><u>Year</u>: <%=car.year%>
                            </li>
                            <li>
                                <form action="/show/<%=car._id%>?_method=PUT" method="POST">
                                    <input type="submit" value="Add to Garage">
                                </form>
                            </li>
                        </ul>

                    </div>
                </section>


            </main>
    </body>

    </html>