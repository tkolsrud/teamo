<%- include ("../partials/headerpartial.ejs"); %>

    <body>
        <%- include ("../partials/navbarPartial.ejs"); %>

            <h2>Account Settings</h2>

            <div class="div-user_info user-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor"
                    class="bi bi-person-circle user-icon" viewBox="0 0 16 16">
                    <path class="circle" d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    <path fill-rule="evenodd"
                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                </svg>
            </div>



            <section class="section-acount_info">

                <div class="div-user_info">
                    <p class="p-user-info"> Email: <span class="span-needs-space">
                            <%=user.email%>
                        </span>
                    </p>
                </div>
                <div class="div-user_info">
                    <p class="p-user-info">Username: <span class="span-needs-space">
                            <%=user.username%>
                        </span>
                    </p>
                </div>
                <div class="div-user_info">
                    <form action="/admin/<%=user._id%>?_method=DELETE" method="POST">
                        <input class="btn btn-removecar btn-delete-account" type="submit" value="Delete Account" />
                    </form>
                </div>






            </section>








    </body>


    </html>